version: "3.7"
  


services:



  master:

    image: alpine:latest

    container_name: master01

    hostname: master01

    stdin_open: true

    tty: true

    command : >

      /bin/sh -c "apk update 

      apk add ansible openssh-server openssh

      ssh-keygen
      
      /bin/sh"


    volumes:

      - ansible_vol:/var/ans

      - ./files/:/files/

      - ~/.ssh:/root/.ssh

volumes:

  ansible_vol:
